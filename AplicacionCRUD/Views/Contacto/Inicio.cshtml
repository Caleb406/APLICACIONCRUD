@model List<AplicacionCRUD.Models.Contacto>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading" style="background-color: #337ab7; color: #fff;">
                    <h3 class="panel-title">Lista de Contactos</h3>
                </div>
                <div class="panel-body" style="background-color: #f5f5f5;">
                    <div class="text-right">
                        <a class="btn btn-success" href="@Url.Action("Registrar", "Contacto")">
                            <i class="glyphicon glyphicon-plus"></i> Crear Nuevo Contacto
                        </a>
                    </div>
                    <hr />
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Teléfono</th>
                                    <th>Correo</th>
                                    <th style="width:150px">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Nombres</td>
                                        <td>@item.Apellidos</td>
                                        <td>@item.Telefono</td>
                                        <td>@item.Correo</td>
                                        <td>
                                            <a class="btn btn-primary btn-sm" href="@Url.Action("Editar", "Contacto", new { idcontacto = item.idContacto })">
                                                <i class="glyphicon glyphicon-edit"></i> Editar
                                            </a>
                                            <a class="btn btn-danger btn-sm" href="@Url.Action("Eliminar", "Contacto", new { idcontacto = item.idContacto })">
                                                <i class="glyphicon glyphicon-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
